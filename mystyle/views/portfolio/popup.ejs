<%layout("layouts/boilerplate")%>

<div class="popup-form">
  <form action="/contact/popup" method="POST" novalidate>
    <label class="popup-lable" for="name">Name</label>
    <input
      class="popup-inpt"
      type="text"
      name="userName"
      placeholder="name"
      id="name"
      required
    />
    <textarea
      name="message"
      class="message"
      cols="40"
      rows="10"
      required
    ></textarea>
    <button class="btn-popup">Send</button>
  </form>
  <div class="close">
    <button class="btn-close">Close</button>
  </div>
</div>

<script src="/javascripts/validation.js"></script>
